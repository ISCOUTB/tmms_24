<div class="tmms-management-block">
    <div class="tmms-header text-center mb-3">
        {{{icon}}}
        <h6 class="mt-2 mb-1 font-weight-bold">{{title}}</h6>
        <small class="text-muted">{{subtitle}}</small>
    </div>

    <div class="tmms-stats mb-3">
        <div class="row text-center">
            <div class="col-4">
                <div class="stat-card">
                    <div class="stat-number text-success">{{completion_rate}}%</div>
                    <div class="stat-label">{{completion_rate_label}}</div>
                </div>
            </div>
            <div class="col-4">
                <div class="stat-card">
                    <div class="stat-number" style="color: #ff6600;">{{total_completed}}</div>
                    <div class="stat-label">{{completed_label}}</div>
                </div>
            </div>
            <div class="col-4">
                <div class="stat-card">
                    <div class="stat-number text-warning">{{total_in_progress}}</div>
                    <div class="stat-label">{{in_progress_label}}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <div class="progress" style="height: 10px;">
            <div class="progress-bar" style="width: {{completion_rate}}%; background: linear-gradient(135deg, #ff6600 0%, #e65c00 100%);"></div>
        </div>
        <small class="text-muted">{{total_completed}} {{of_str}} {{total_enrolled}} {{students_completed_str}}</small>
    </div>

    {{#has_recent}}
    <div class="recent-completions mt-3">
        <h6 class="mb-2 font-weight-bold">{{recent_title}}</h6>
        {{#recent_completions}}
        <div class="d-flex justify-content-between align-items-center mb-1">
            <span class="small">{{firstname}} {{lastname}}</span>
            <span class="badge badge-success small" style="background: linear-gradient(135deg, #ff6600 0%, #e65c00 100%); border-color: #ff6600; color: #fff;">{{date}}</span>
        </div>
        {{/recent_completions}}
    </div>
    {{/has_recent}}

    <div class="tmms-actions text-center mt-3">
        <a href="{{link_url}}" class="btn btn-sm btn-block" style="background: linear-gradient(135deg, #ff6600 0%, #e65c00 100%); border-color: #ff6600; color: #fff;">
            <i class="fa fa-chart-bar"></i> {{view_all_str}}
        </a>
    </div>
</div>
