<div class="tmms-results-block">
    <div class="tmms-header text-center mb-3">
        <div style="position: relative; display: inline-block; line-height: 0;">
            {{{icon}}}
            <i class="fa fa-check" style="position: absolute; top: -6px; right: -9px; font-size: 1.4em; background: white; border-radius: 50%; line-height: 1;"></i>
        </div>
        <h6 class="mt-2 mb-1">{{title}}</h6>
        <small class="text-muted">{{subtitle}}</small>
    </div>

    <div class="tmms-description mb-3" style="background: #f8f9fa; padding: 10px 12px; border-radius: 5px; border-left: 3px solid #ff6600;">
        <small class="text-muted" style="line-height: 1.5;">
            <i class="fa fa-info-circle" style="color: #ff6600;"></i> {{description}}
        </small>
    </div>

    <div class="tmms-top-section mb-3">
        {{#all_bad}}
            <h6 class="mb-2">{{your_dimensions_title}}</h6>
            {{#dimensions}}
            <div class="card border-secondary mb-2" style="border-color: #ffaa66 !important;">
                <div class="card-body p-2">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <strong class="small">{{name}}</strong>
                        <span class="small text-muted">{{score}}/40</span>
                    </div>
                    <div class="small text-muted" style="line-height: 1.2;">{{interpretation}}</div>
                    <div class="small text-muted mt-1" style="font-size: 0.85em; color: #999 !important;"><i class="fa fa-bullseye"></i> {{goal_text}}</div>
                </div>
            </div>
            {{/dimensions}}
        {{/all_bad}}

        {{^all_bad}}
            {{#has_star_dimensions}}
            <h6 class="mb-2">{{star_dimensions_title}}</h6>
            {{/has_star_dimensions}}
            {{#star_dimensions}}
            <div class="card border-primary mb-3" style="border-left: 4px solid #ff6600 !important; border-color: #ff6600 !important;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <strong><i class="fa fa-star text-warning"></i> {{name}}</strong><br>
                            <small class="text-muted">{{score}}/40 {{points_str}}</small>
                        </div>
                    </div>
                    <div class="small text-muted mt-2" style="font-style: italic; line-height: 1.3;">{{interpretation}}</div>
                    <div class="small text-muted mt-1" style="font-size: 0.85em; color: #999 !important;"><i class="fa fa-bullseye"></i> {{goal_text}}</div>
                    <div class="mt-2 mb-2">
                        <span class="badge badge-light text-wrap text-left" style="font-weight: normal; color: #666; background-color: #f8f9fa; border: 1px solid #eee; width: 100%; display: block; padding: 8px; line-height: 1.4;">
                            {{{reason_icon}}} {{{reason_text}}}
                        </span>
                    </div>
                </div>
            </div>
            {{/star_dimensions}}
            
            {{#has_other_dimensions}}
            <div class="tmms-other-dimensions mb-3">
                <h6 class="mb-2">{{other_dimensions_title}}</h6>
                {{#other_dimensions}}
                <div class="card border-secondary mb-2" style="border-color: #ffaa66 !important;">
                    <div class="card-body p-2">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <strong class="small">{{name}}</strong>
                            <span class="small text-muted">{{score}}/40</span>
                        </div>
                        <div class="small text-muted" style="line-height: 1.2;">{{interpretation}}</div>
                        <div class="small text-muted mt-1" style="font-size: 0.85em; color: #999 !important;"><i class="fa fa-bullseye"></i> {{goal_text}}</div>
                    </div>
                </div>
                {{/other_dimensions}}
            </div>
            {{/has_other_dimensions}}
        {{/all_bad}}
        
        <div class="tmms-actions text-center mt-3">
            <a href="{{detailed_link}}" class="btn btn-sm" style="background: linear-gradient(135deg, #ff6600 0%, #e65c00 100%); border-color: #ff6600; color: #fff;">
                <i class="fa fa-chart-bar"></i> {{view_detailed_str}}
            </a>
        </div>
    </div>
</div>
